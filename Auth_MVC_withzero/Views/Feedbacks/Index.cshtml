@model IEnumerable<MVC_CollegeManagement.Models.Feedback>

@{
    ViewData["Title"] = "Index";
}
@if (User.Identity.IsAuthenticated)
{
    if (User.IsInRole("admin"))
    {
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MVC College Management</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Professors" asp-action="Index">Professor</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Students" asp-action="Index">Student</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Courses" asp-action="Index">Courses</a>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="nav-link text-dark" data-toggle="dropdown" role="button" aria-expanded="false">Help <span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li><a class="nav-link text-dark" asp-area="" asp-controller="Feedbacks" asp-action="Index">Feedback</a></li>
                                <li><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="About">About us</a></li>
                            </ul>
                        </li>
                    </ul>
                    <form method="post" asp-controller="Account" asp-action="Logout">
                        <div>@User.Identity.Name <input type="submit" value="Log out" /></div>
                    </form>
                </div>
            </div>
        </nav>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.UserName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Message)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Message)
                        </td>
                        <td>
                            <a asp-action="Delete" asp-route-id="@item.UserName">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    if (User.IsInRole("professor"))
    {
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MVC College Management</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Student</a>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="nav-link text-dark" data-toggle="dropdown" role="button" aria-expanded="false">Help <span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li><a class="nav-link text-dark" asp-area="" asp-controller="Feedbacks" asp-action="Index">Feedback</a></li>
                                <li><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="About">About us</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <form method="post" asp-controller="Account" asp-action="Logout">
                    <div>@User.Identity.Name <input type="submit" value="Log out" /></div>
                </form>
            </div>
        </nav>
    }
    if (User.IsInRole("student"))
    {
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MVC College Management</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Courses</a>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="nav-link text-dark" data-toggle="dropdown" role="button" aria-expanded="false">Help <span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li><a class="nav-link text-dark" asp-area="" asp-controller="Feedbacks" asp-action="Index">Feedback</a></li>
                                <li><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="About">About us</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <form method="post" asp-controller="Account" asp-action="Logout">
                    <div>@User.Identity.Name <input type="submit" value="Log out" /></div>
                </form>
            </div>
        </nav>
    }
}

